{
  "manifest_version": 2,
  "name": "DuNFy",
  "description": "This extension will periodically download the web content of your choice.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
		"event.js"
	],
	"persistent": false
  },
  "content_scripts": [{
	"matches": ["<all_urls>"],
	"js": ["content.js"]
  }],
  "permissions": [
	"tabs",
    "activeTab",
    "https://ajax.googleapis.com/",
	"alarms"
  ]
}
